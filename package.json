{
  "name": "anyscript",
  "displayName": "AnyScript",
  "description": "Language support for the AnyScript language",
  "version": "0.2.5",
  "engines": {
    "vscode": "^1.81.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnyBody/vscode-anyscript"
  },
  "publisher": "anybody",
  "icon": "icon.png",
  
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "anyscript",
        "extensions": [
          ".any"
        ],
        "aliases": [
          "anyscript",
          "AnyScript",
          "any"
        ],
        "configuration": "./syntaxes/language-configuration.json",
        "icon": {
          "light": "icon.png",
          "dark": "icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "anyscript",
        "scopeName": "source.anyscript",
        "path": "./syntaxes/any.tmGrammar.json"
      }
    ],
    "snippets": [
      {
        "language": "anyscript",
        "path": "./snippets/anyscript.json"
      }
    ],
    "configurationDefaults": {
      "[anyscript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
